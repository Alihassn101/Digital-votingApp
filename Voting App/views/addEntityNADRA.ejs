<%- include ('partials/NADRAheader') %>


<section class="form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="./form.jpg" class="img-fluid" alt="" style="height: 950px;">
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Add Entity To Dummy-NADRA  !</h1>
                    <h4>Add Entity here! </h4>  
                    <h6 class="text-danger"><%= msg %></h6>

                    <form action="/createEntityNADRA" method="POST">


                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="PollingName" name="blockChainName" value="<%=bcName%>" class="form-control my-2 p-3"  required readonly>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Voter Name"  name="Name" class="form-control my-2 p-3" required>
                            </div>
                        </div>

                        <!-- <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Voter Status"  name="Status" class="form-control my-2 p-3" required>
                            </div>
                        </div> -->

                        <div class="form-row">
                            <div class="col-lg-7">

                                <select name="Status" class="browser-default custom-select" placeholder="Voter Status">
                                    <option value="Alive">Alive</option>
                                    <option value="Dead">Dead</option>
                                    
                                </select>
                                
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-7">

                                <input type="text" class="form-control my-2 p-3"
                                     required pattern="(.){13,13}" maxlength="13"
                                    placeholder="Voter CNIC" name="CNIC" onkeyup="cniconly(this)">

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Voter Adress"  name="ADDRESS" class="form-control my-2 p-3" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="date" placeholder="Date Of Birth" name="DOB" class="form-control my-2 p-3" required="">
                                <!-- <input type="text" placeholder="Voter Date Of Birth"  name="DOB" class="form-control my-2 p-3" required> -->
                            </div>
                        </div>
                        
                       
                        <div class="form-row">
                            <div class="col-lg-7">
                                <select name="City"  class="browser-default custom-select my-2" placeholder="City">
                                    <option value="None">Select City</option>
                                    <%for(var i=0;i<cities.length;i++){%>
                                      <option value="<%=cities[i]%>"><%=cities[i]%></option>
                                    <%}%>
                                    
                                </select>
                                <!-- <input type="text" placeholder="Voter Province"  name="Province" class="form-control my-2 p-3" required> -->
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-7">
                                <select name="Province" class="browser-default custom-select my-2" placeholder="Voter Province">
                                    <option value="Punjab">Punjab</option>
                                    <option value="Balochistan">Balochistan</option>
                                    <option value="Sindh">Sindh</option>
                                    <option value="KPK">KPK</option>
                                    <option value="Federal">Federal</option>
                                
                                </select>
                                <!-- <input type="text" placeholder="Voter Province"  name="Province" class="form-control my-2 p-3" required> -->
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Contact (923XXXXXXXXX)" onkeyup="cniconly(this)" maxlength="12" pattern="(.){12,12}"  name="Contact" class="form-control my-2 p-3" required>
                            </div>
                        </div>

                        
                        <!-- <div class="form-row">
                            <div class="col-lg-7">

                                <strong>Ballot Icon:</strong><input type="file" name="Icon" class="form-control-file my-1 p-2"
                                    required>
                            </div>
                        </div> -->



                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 mt-2 mb-3"> Submit </button>
                            </div>
                        </div>
                    </form>

                    <form action="/createEntityNADRAFromFile" method="POST">
                        <div class="form-row">
                            <div class="col-lg-7">
                                <strong>Add Entities List:</strong><input type="file"  name="listfile" class="form-control-file my-1 p-2"
                                    required>
                            </div>
                        </div>



                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 mt-2 mb-2"> Submit </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <script type="text/JavaScript">
        function cniconly(i) {
            var cnic = /[^0-9]/gi;
            i.value=i.value.replace(cnic, "");
        } 
    </script>

<%- include ('partials/footer') %> 



