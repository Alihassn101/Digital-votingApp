<%- include ('partials/voterheader') %>

<section class="form my-4 mx-3">
    <div class="container">
        <div class="row no-gutters">
            
            <div class="col-lg-12 px-5 pt-5" style="text-align: center;">
                <h1 class="font-weight-bold py-3"> <%=voter.data.Name%></h1>
                <form >
                    <h6 class="text"> <%=voter.data.CNIC%></h6>
                    <h6 class="text"><%=voter.data.Contact%></h6>
                    <h6 class="text"><%=voter.data.Province%></h6>
                    <h6 class="text"> <%=voter.data['AREA CODE']%></h6>
                </form>
            </div>
            

            <form class="form-inline" action="/castVoteSubmit" method="POST">
                <%for (var candidates=0;candidates<CandidatesList.length;candidates++){%>
                    <div class="col-md-6 col-lg-4  pt-5">
                        <div class="card" style="width: 18rem; border-radius: 20px;">
                            <div class="card-body"> 
                               <img src=<%=CandidatesList[candidates].data.Icon%> height="50" width="50px" />
                                <strong><%=CandidatesList[candidates].data.Name%></strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" value=<%=CandidatesList[candidates].hash%> name="Candidate">
                            </div>
                        </div>
                    </div>
                <%}%>
                <div class="col-lg-12 px-5 pt-3 mb-3" style="text-align: center;">
                    <!-- <a href="#" class="btn btn-success btn-lg">Cast Vote</a> -->
                    <button class="btn btn-success btn-lg" type="submit">Cast Vote</button>
                </div>
            </form>


        </div>
    </div>
</section>


