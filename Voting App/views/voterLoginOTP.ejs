<%- include ('partials/Individualheader') %>


<section class="form my-4 mx-5">
  <div class="container">
      <div class="row no-gutters">
          <div class="col-lg-5">
              <img src="./form.jpg" class="img-fluid" alt="">
          </div>
          <div class="col-lg-7 px-5 pt-5">
              <h1 class="font-weight-bold py-3"> Voter Login</h1>
              <h6 class="text-danger"><%= msg %></h6>
              <form action="/voterLoginOTP" method="POST">
                  
                  <div class="form-row">
                      <div class="col-lg-7">
                          <input type="text" class="form-control my-2 p-3"
                               required minlength="13" maxlength="13"
                              placeholder="CNIC" name="CNIC" value="<%=cnic%>" readonly>

                      </div>
                  </div>

                  <div class="form-row">
                    <div class="col-lg-7">
                        <input type="text" class="form-control my-2 p-3"
                            placeholder="OTP" name="OTP">
                    </div>
                </div>

                  <div class="form-row">
                      <div class="col-lg-7">
                          <button type="submit" class="btn1 mt-2"> Submit </button>
                      </div>
                  </div>

              </form>

            <form action="/voterLogin" method="POST">
                <div class="form-row" hidden>
                    <div class="col-lg-7">
                        <input type="text" class="form-control my-2 p-3"
                             required minlength="13" maxlength="13"
                            placeholder="CNIC" name="CNIC" value="<%=cnic%>" readonly>

                    </div>
                </div>
                <div class="form-row">
                    <div class="col-lg-7">
                        <button type="submit" class="btn btn-link my-0 py-0"> Resend OTP </button>
                    </div>
                </div>
            </form>
          </div>
      </div>
  </div>
</section>




<%- include ('partials/footer') %>



