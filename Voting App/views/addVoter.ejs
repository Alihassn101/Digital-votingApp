<%- include ('partials/authorityheader') %>



<section class="form my-4 mx-5">
  <div class="container">
      <div class="row no-gutters">
          <div class="col-lg-5">
              <img src="./form.jpg" class="img-fluid" alt="" style="height: 900px;">
          </div>
          <div class="col-lg-7 px-5 pt-5">
              <h1 class="font-weight-bold py-3">Add Voters In Polling ! </h1>
              <h6 class="text-danger"><%= msg %></h6>
              

              <form action="createVoter" method="POST">


                  <div class="form-row">
                      <div class="col-lg-7">
                          <input type="text" placeholder="PollingName" readonly  name="blockChainName" value="<%=bcName%>" class="form-control my-2 p-3" required>
                      </div>
                  </div>

                  <div class="form-row">
                      <div class="col-lg-7">
                          <input type="text" placeholder="Voter Name" name="Name" class="form-control my-2 p-3" required>
                      </div>
                  </div>




                  

                  <!-- hare -->

                  


                <div class="form-row">
                    <div class="col-lg-7 my-2">

                        <select name="Status" class="browser-default custom-select" placeholder="Voter Status">
                            <option value="Active">Active</option>
                            <option value="Disable">Disable</option>
                            
                        </select>
                        
                    </div>
                </div>

                

                <div class="form-row">
                    <div class="col-lg-7">
                        <input type="text" placeholder="Address"  name="ADDRESS" class="form-control my-2 p-3" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-7">
                        <input type="text" placeholder="Contact (923XXXXXXXXX)" onkeyup="cniconly(this)" name="Contact" pattern="(.){12,12}" maxlength="12" class="form-control my-2 p-3" required>
                    </div>
                </div>

               
                <div class="form-row">
                    <div class="col-lg-7">
                        <input type="text" class="form-control my-2 p-3"
                             required pattern="(.){13,13}" maxlength="13"
                            placeholder="CNIC" onkeyup="cniconly(this)" name="CNIC">

                    </div>
                </div>


                <div class="form-row">
                    <div class="col-lg-7">
                        <input type="date" placeholder="Date Of Birth" name="DOB" class="form-control my-2 p-3" required="">
                        <!-- <input type="text" placeholder="Voter Date Of Birth"  name="DOB" class="form-control my-2 p-3" required> -->
                    </div>
                </div>


                <!-- <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Voter Province"  name="Province" class="form-control my-2 p-3" required>
                            </div>
                        </div> -->

                        <div class="form-row">
                            <div class="col-lg-7">
                                <select name="City"  class="browser-default custom-select my-2" placeholder="City">
                                    <option value="None">Select City</option>
                                    <%for(var i=0;i<Cities.length;i++){%>
                                      <option value="<%=Cities[i]%>"><%=Cities[i]%></option>
                                    <%}%>
                                    
                                </select>
                                <!-- <input type="text" placeholder="Voter Province"  name="Province" class="form-control my-2 p-3" required> -->
                            </div>
                        </div>

                        <div class="form-row py-2">
                            <div class="col-lg-7">
                                <select name="Province" class="browser-default custom-select" placeholder="Province">
                                    <option value="Punjab">Punjab</option>
                                    <option value="Balochistan">Balochistan</option>
                                    <option value="Sindh">Sindh</option>
                                    <option value="KPK">KPK</option>
                                    <option value="Federal">Federal</option>
                                
                                </select>
                                <!-- <input type="text" placeholder="Voter Province"  name="Province" class="form-control my-2 p-3" required> -->
                            </div>
                        </div>
                 
                <div class="form-row">
                    <div class="col-lg-7 my-2">
                        <select class="browser-default custom-select" name="AREA CODE" placeholder="Select Polling Area">
                            <%for(var x=0;x<AreaList.length;x++){%>
                            <option value="<%=AreaList[x]%>"><%=AreaList[x]%></option>
                            <%}%>
                        </select>
                        
                    </div>
                </div>


                  <div class="form-row">
                      <div class="col-lg-7">
                          <button type="submit" class="btn1 mt-2 mb-3"> Submit </button>
                      </div>
                  </div>

              </form>
              <form action="/createVotersFromFile" method="POST">
                  <div class="form-row">
                      <div class="col-lg-7">
                          <strong>Voter List:</strong><input type="file" name="listfile" class="form-control-file my-1 p-2"
                              required>
                      </div>
                  </div>



                  <div class="form-row">
                      <div class="col-lg-7">
                          <button type="submit" class="btn1 mt-2 mb-2"> Submit </button>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</section>


<script type="text/JavaScript">
    function cniconly(i) {
        var cnic = /[^0-9]/gi;
        i.value=i.value.replace(cnic, "");
    } 
</script>


<%- include ('partials/footer') %>
